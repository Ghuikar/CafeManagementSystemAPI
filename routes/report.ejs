
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            width: 80%;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
        }
        h3 {
            text-align: center;
            margin-top: 0;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f4f4f4;
        }
        .footer {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <h3>Hotel Management System</h3>
    <table>
        <tr>
            <th>Name:</th>
            <td><%= name %></td>
            <th>Email:</th>
            <td><%= email %></td>
        </tr>
        <tr>
            <th>Contact Number:</th>
            <td><%= contactNumber %></td>
            <th>Payment Method:</th>
            <td><%= paymentMethod %></td>
        </tr>
    </table>

    <h3>Products Details</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Sub Total</th>
        </tr>
        <% if (productDetails.length > 0) { %>
            <% productDetails.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.price %></td>
                    <td><%= product.total %></td>
                </tr>
            <% }); %>
        <% } %>
    </table>

    <h3>Total: <%= totalAmount %></h3>
    
    <div class="footer">
        <h4>Thank you for visiting. Please Visit Again</h4>
    </div>
</div>

</body>
</html>
